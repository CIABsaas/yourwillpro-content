---
/**
 * Feedback Page
 * YourWillPro Content Site
 * 
 * Standalone layout (like GuideLayout) for full-width design
 */

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Get in Touch";
const pageDescription = "Have a question about estate planning? Found an error? Want to share your story? We'd love to hear from you.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=DM+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <title>{pageTitle} | YourWillPro</title>
    <meta name="description" content={pageDescription} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content="Get in Touch | YourWillPro" />
    <meta property="og:description" content="Have a question about estate planning? Found an error? Want to share your story? We'd love to hear from you." />
    <meta property="og:image" content="https://yourwillpro.com.au/images/og/og-default.png" />
    <meta property="og:site_name" content="YourWillPro" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Get in Touch | YourWillPro" />
    <meta name="twitter:description" content="Have a question about estate planning? Found an error? Want to share your story? We'd love to hear from you." />
    <meta name="twitter:image" content="https://yourwillpro.com.au/images/og/og-default.png" />
  </head>
  <body>

    <Header />

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Get in <span class="accent">Touch</span></h1>
        <p>Have a question? Found an error? Want to share your story? We'd love to hear from you.</p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="feedback-main">
      
      <section class="options-section">
        <h2>What can we help you with?</h2>
        
        <div class="options-grid">
          
          <!-- Ask about a term -->
          <div class="option-card option-navy" data-target="ask-term">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                <path d="M8 7h8"/>
                <path d="M8 11h6"/>
              </svg>
            </div>
            <h3>Ask about a term</h3>
            <p>Can't find a word in our dictionary? Let us know and we'll add it.</p>
            <span class="card-arrow">â†’</span>
          </div>

          <!-- Report an error -->
          <div class="option-card option-red" data-target="report-error">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
            </div>
            <h3>Report an error</h3>
            <p>Spotted a mistake? Help us keep our information accurate.</p>
            <span class="card-arrow">â†’</span>
          </div>

          <!-- General feedback -->
          <div class="option-card option-teal" data-target="general">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                <path d="M8 9h8"/>
                <path d="M8 13h6"/>
              </svg>
            </div>
            <h3>General feedback</h3>
            <p>Share your thoughts, suggestions, or just say hello.</p>
            <span class="card-arrow">â†’</span>
          </div>

          <!-- Help me choose -->
          <div class="option-card option-gold" data-target="choose-service">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/>
              </svg>
            </div>
            <h3>Help me choose a will service</h3>
            <p>Not sure what's right for you? We can point you in the right direction.</p>
            <span class="card-arrow">â†’</span>
          </div>

          <!-- Suggest improvement -->
          <div class="option-card option-purple" data-target="suggestion">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18h6"/>
                <path d="M10 22h4"/>
                <path d="M15.09 14c.18-.98.65-1.74 1.41-2.5A4.65 4.65 0 0 0 18 8 6 6 0 0 0 6 8c0 1 .23 2.23 1.5 3.5A4.61 4.61 0 0 1 8.91 14"/>
              </svg>
            </div>
            <h3>Suggest an improvement</h3>
            <p>Have an idea to make YourWillPro better? We're all ears.</p>
            <span class="card-arrow">â†’</span>
          </div>

          <!-- Share story -->
          <div class="option-card option-coral" data-target="share-story">
            <div class="card-top-bar"></div>
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
              </svg>
            </div>
            <h3>Here is my story</h3>
            <p>Your experience could help others. Share your estate planning journey.</p>
            <span class="card-arrow">â†’</span>
          </div>

        </div>
      </section>

      <!-- Form Placeholder -->
      <div class="form-placeholder" id="form-placeholder">
        <p>ðŸ‘† Select an option above to get started</p>
      </div>

      <!-- Form Sections -->

      <!-- Ask about a term -->
      <div class="feedback-form-wrapper hidden" data-form="ask-term">
        <div class="form-container">
          <div class="form-header">
            <div class="form-icon option-navy">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                <path d="M8 7h8"/>
                <path d="M8 11h6"/>
              </svg>
            </div>
            <h2>Can't Find a Word?</h2>
            <p>Our dictionary covers over 200 estate planning terms â€” but we know there's always more to add.</p>
            <p>If you've come across a word or phrase that left you scratching your head, let us know. We'll research it, write it up in plain English, and add it to the dictionary.</p>
          </div>

          <form class="feedback-form" action="mailto:contactus@yourwillpro.com.au" method="post" enctype="text/plain">
            <input type="hidden" name="subject" value="Dictionary Term Request">

            <div class="form-group">
              <label for="term">The term or phrase <span class="required">*</span></label>
              <input type="text" id="term" name="term" required placeholder="e.g., 'letters of administration'">
            </div>

            <div class="form-group">
              <label for="source">Where did you encounter it?</label>
              <input type="text" id="source" name="source" placeholder="e.g., in a will, on a government website, from a lawyer">
              <span class="field-hint">This helps us understand the context</span>
            </div>

            <div class="form-group">
              <label for="context">Any context that might help?</label>
              <textarea id="context" name="context" rows="4" placeholder="Optional - add any additional details that might help us explain this term clearly"></textarea>
            </div>

            <div class="form-group">
              <label for="email-term">Your email (optional)</label>
              <input type="email" id="email-term" name="email" placeholder="We'll let you know when we've added it">
            </div>

            <button type="submit" class="submit-btn">Send Request</button>
          </form>

          <div class="form-footer">
            <p><strong>Recently Added Terms:</strong> We regularly update our dictionary based on reader requests. Your question might help hundreds of others who were wondering the same thing.</p>
          </div>
        </div>
      </div>

      <!-- Report an error -->
      <div class="feedback-form-wrapper hidden" data-form="report-error">
        <div class="form-container">
          <div class="form-header">
            <div class="form-icon option-red">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
            </div>
            <h2>Spotted a Mistake?</h2>
            <p>We work hard to keep our information accurate â€” but we're human. If you've found an error, outdated information, or something that doesn't look right, please let us know.</p>
            <p>Every correction helps make this resource better for everyone.</p>
          </div>

          <form class="feedback-form" action="mailto:contactus@yourwillpro.com.au" method="post" enctype="text/plain">
            <input type="hidden" name="subject" value="Error Report">

            <div class="form-group">
              <label for="page-url">Page or article where you found the error <span class="required">*</span></label>
              <input type="text" id="page-url" name="page-url" required placeholder="e.g., /guides/choosing-the-right-type-of-will">
              <span class="field-hint">Copy the URL or page title</span>
            </div>

            <div class="form-group">
              <label>What's the problem? <span class="required">*</span></label>
              <div class="checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" name="error-type" value="Factual error">
                  <span>Factual error</span>
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="error-type" value="Outdated information">
                  <span>Outdated information</span>
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="error-type" value="Broken link">
                  <span>Broken link</span>
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="error-type" value="Spelling or grammar">
                  <span>Spelling or grammar</span>
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" name="error-type" value="Something else">
                  <span>Something else</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label for="error-description">Please describe the error <span class="required">*</span></label>
              <textarea id="error-description" name="error-description" rows="4" required placeholder="Tell us what's wrong so we can fix it"></textarea>
            </div>

            <div class="form-group">
              <label for="correction">What should it say instead? (if you know)</label>
              <textarea id="correction" name="correction" rows="3" placeholder="Optional - suggest the correct information"></textarea>
            </div>

            <div class="form-group">
              <label for="email-error">Your email (optional)</label>
              <input type="email" id="email-error" name="email" placeholder="We'll let you know when it's fixed">
            </div>

            <button type="submit" class="submit-btn">Report Error</button>
          </form>

          <div class="form-footer">
            <p><strong>Thank You:</strong> Accuracy matters â€” especially with legal information. We appreciate you taking the time to help us get it right.</p>
          </div>
        </div>
      </div>

      <!-- General feedback -->
      <div class="feedback-form-wrapper hidden" data-form="general">
        <div class="form-container">
          <div class="form-header">
            <div class="form-icon option-teal">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                <path d="M8 9h8"/>
                <path d="M8 13h6"/>
              </svg>
            </div>
            <h2>We'd Love to Hear From You</h2>
            <p>Whether it's a suggestion, a question, or just a quick hello â€” your feedback helps shape YourWillPro.</p>
            <p>This site was built because I couldn't find what I needed. If there's something you need that isn't here, tell us.</p>
          </div>

          <form class="feedback-form" action="mailto:contactus@yourwillpro.com.au" method="post" enctype="text/plain">
            <input type="hidden" name="subject" value="General Feedback">

            <div class="form-group">
              <label for="general-message">What's on your mind? <span class="required">*</span></label>
              <textarea id="general-message" name="message" rows="6" required placeholder="Share your thoughts, suggestions, or questions..."></textarea>
            </div>

            <div class="form-group">
              <label>How would you rate your experience with YourWillPro?</label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="rating" value="Very helpful">
                  <span>Very helpful</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="rating" value="Somewhat helpful">
                  <span>Somewhat helpful</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="rating" value="Neutral">
                  <span>Neutral</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="rating" value="Could be better">
                  <span>Could be better</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="rating" value="Not helpful">
                  <span>Not helpful</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label>How did you find us?</label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="source" value="Google search">
                  <span>Google search</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="source" value="Social media">
                  <span>Social media</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="source" value="Friend or family recommendation">
                  <span>Friend or family recommendation</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="source" value="Other">
                  <span>Other</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label for="email-general">Your email (optional)</label>
              <input type="email" id="email-general" name="email" placeholder="If you'd like a response">
            </div>

            <button type="submit" class="submit-btn">Send Feedback</button>
          </form>

          <div class="form-footer">
            <p><strong>Every Message Gets Read:</strong> I personally read every piece of feedback. Your input directly influences what we work on next.</p>
          </div>
        </div>
      </div>

      <!-- Help me choose a will service -->
      <div class="feedback-form-wrapper hidden" data-form="choose-service">
        <div class="form-container">
          <div class="form-header">
            <div class="form-icon option-gold">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/>
              </svg>
            </div>
            <h2>Not Sure Where to Start?</h2>
            <p>There are many ways to create a will â€” DIY kits, online services, solicitors, public trustees. The right choice depends on your situation.</p>
            <p>Tell us a bit about yourself and we'll point you in the right direction.</p>
          </div>

          <form class="feedback-form" action="mailto:contactus@yourwillpro.com.au" method="post" enctype="text/plain">
            <input type="hidden" name="subject" value="Help Me Choose">

            <div class="form-group">
              <label>What best describes you? <span class="required">*</span></label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="situation" value="Single, no children, simple assets" required>
                  <span>Single, no children, simple assets</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Married or de facto, no children">
                  <span>Married or de facto, no children</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Parent with minor children">
                  <span>Parent with minor children</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Blended family (stepchildren involved)">
                  <span>Blended family (stepchildren involved)</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Business owner">
                  <span>Business owner</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Significant assets or property">
                  <span>Significant assets or property</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Complex family situation">
                  <span>Complex family situation</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="situation" value="Other">
                  <span>Other</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label>What's your main concern? <span class="required">*</span></label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="concern" value="Cost â€” I want the cheapest option" required>
                  <span>Cost â€” I want the cheapest option</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="concern" value="Speed â€” I need this done quickly">
                  <span>Speed â€” I need this done quickly</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="concern" value="Complexity â€” My situation isn't straightforward">
                  <span>Complexity â€” My situation isn't straightforward</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="concern" value="Confidence â€” I want to make sure it's done right">
                  <span>Confidence â€” I want to make sure it's done right</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="concern" value="I'm not sure what I need">
                  <span>I'm not sure what I need</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label>Have you had a will before?</label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="previous-will" value="No, this is my first">
                  <span>No, this is my first</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="previous-will" value="Yes, but it's outdated">
                  <span>Yes, but it's outdated</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="previous-will" value="Yes, but my circumstances have changed">
                  <span>Yes, but my circumstances have changed</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label for="additional-context">Anything else we should know?</label>
              <textarea id="additional-context" name="additional-context" rows="4" placeholder="Optional - any other details that might help us recommend the right option"></textarea>
            </div>

            <div class="form-group">
              <label for="email-choose">Your email <span class="required">*</span></label>
              <input type="email" id="email-choose" name="email" required placeholder="We'll send our recommendation">
            </div>

            <button type="submit" class="submit-btn">Get Recommendations</button>
          </form>

          <div class="form-footer">
            <p><strong>What Happens Next:</strong> We'll review your answers and email you a personalised recommendation â€” including what to look for and questions to ask, regardless of which path you choose.</p>
          </div>
        </div>
      </div>

      <!-- Suggest an improvement -->
      <div class="feedback-form-wrapper hidden" data-form="suggestion">
        <div class="form-container">
          <div class="form-header">
            <div class="form-icon option-purple">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18h6"/>
                <path d="M10 22h4"/>
                <path d="M15.09 14c.18-.98.65-1.74 1.41-2.5A4.65 4.65 0 0 0 18 8 6 6 0 0 0 6 8c0 1 .23 2.23 1.5 3.5A4.61 4.61 0 0 1 8.91 14"/>
              </svg>
            </div>
            <h2>Have an Idea?</h2>
            <p>YourWillPro is a work in progress. If you've thought of something that would make this site more useful, we want to hear it.</p>
            <p>No idea is too small. The best improvements often come from people using the site every day.</p>
          </div>

          <form class="feedback-form" action="mailto:contactus@yourwillpro.com.au" method="post" enctype="text/plain">
            <input type="hidden" name="subject" value="Improvement Suggestion">

            <div class="form-group">
              <label for="suggestion-idea">What would you like to see? <span class="required">*</span></label>
              <textarea id="suggestion-idea" name="suggestion" rows="5" required placeholder="Describe your idea..."></textarea>
            </div>

            <div class="form-group">
              <label for="suggestion-problem">What problem would this solve? <span class="required">*</span></label>
              <textarea id="suggestion-problem" name="problem" rows="4" required placeholder="Help us understand why this would be valuable..."></textarea>
            </div>

            <div class="form-group">
              <label>Which area does this relate to?</label>
              <div class="radio-group">
                <label class="radio-label">
                  <input type="radio" name="area" value="Dictionary">
                  <span>Dictionary</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Guides">
                  <span>Guides</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Stories">
                  <span>Stories</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Navigation / finding things">
                  <span>Navigation / finding things</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Design / readability">
                  <span>Design / readability</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="New topic or content">
                  <span>New topic or content</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Tools or calculators">
                  <span>Tools or calculators</span>
                </label>
                <label class="radio-label">
                  <input type="radio" name="area" value="Something else">
                  <span>Something else</span>
                </label>
              </div>
