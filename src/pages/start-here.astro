<style>
  /* Breadcrumb hover */
  .breadcrumb a:hover {
    color: #c9a227;
  }

  :root {
    --navy: #1a2e44;
    --gold: #c9a227;
    --bg-grey: #f7f8f9;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: white;
    color: #2c3338;
  }

  /* === HERO SECTION === */
  .hero {
    background: var(--navy);
    padding: 3rem 2rem;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-family: 'Source Serif 4', Georgia, serif;
    font-size: 2.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .subheading {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 400;
  }

  /* === CARDS SECTION === */
  .cards-section {
    background: var(--bg-grey);
    padding: 4rem 2rem;
    min-height: 60vh;
  }

  .cards-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  /* === PERSONA CARDS (Version 3 - gold left border) === */
  .persona-card {
    background: var(--bg-grey);
    border-left: 4px solid var(--gold);
    border-radius: 0 12px 12px 0;
    padding: 1.5rem;
    padding-left: 1.75rem;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .persona-card:hover {
    background: white;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transform: translateX(5px);
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .card-title {
    font-family: 'Source Serif 4', Georgia, serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--navy);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .card-description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #4a5563;
    margin-bottom: 1.25rem;
    flex-grow: 1;
  }

  .card-link {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--gold);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s ease;
  }

  .persona-card:hover .card-link {
    gap: 0.75rem;
  }

  /* === RESPONSIVE === */
  @media (max-width: 900px) {
    .hero h1 {
      font-size: 1.85rem;
    }

    .subheading {
      font-size: 1rem;
    }

    .cards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2.5rem 1.5rem;
    }

    .hero h1 {
      font-size: 1.5rem;
    }

    .subheading {
      font-size: 0.95rem;
    }

    .cards-section {
      padding: 3rem 1.5rem;
    }

    .cards-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .persona-card {
      padding: 1.25rem;
      padding-left: 1.5rem;
    }

    .card-icon {
      font-size: 2rem;
    }

    .card-title {
      font-size: 1.1rem;
    }

    .card-description {
      font-size: 0.9rem;
    }
  }
</style>

</body>
</html>
