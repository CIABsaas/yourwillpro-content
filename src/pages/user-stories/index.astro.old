---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allArticles = await getCollection('articles');
const articles = allArticles.filter(article => article.data.category === 'Stories' && article.data.status === 'published');
const sortedArticles = articles.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Get featured story
const featuredStory = articles.find(article => article.data.featured === true);

// Group stories by the group field (exclude featured from lists)
const hardWayStories = sortedArticles.filter(article =>
  article.data.group === "These families learned the hard way" && !article.data.featured
);
const rightWayStories = sortedArticles.filter(article =>
  article.data.group === "How it should be done" && !article.data.featured
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>Stories | YourWillPro</title>
    <meta name="description" content="Real experiences from people who have been through the process." />
  </head>
  <body>

    <Header />

    <!-- Hero Section with Featured Story -->
    <section class="hero-section">
      <div class="hero-inner">
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb">
          <a href="/">Home</a>
          <span class="breadcrumb-separator">›</span>
          <span>User Stories</span>
        </nav>

        <div class="hero-label">
          <span class="label-icon">★</span>
          Featured Story
        </div>

        {featuredStory && (
          <div class="featured-story">
            {featuredStory.data.heroImage && (
              <div class="featured-image">
                <img src={featuredStory.data.heroImage} alt="" />
              </div>
            )}
            <div class="featured-content">
              <div class="featured-meta">
                {featuredStory.data.issue && <span class="featured-issue">{featuredStory.data.issue}</span>}
                {featuredStory.data.readTime && <span class="featured-time">{featuredStory.data.readTime}</span>}
              </div>
              <h1 class="featured-title">{featuredStory.data.title.split(' - ').pop()}</h1>
              <p class="featured-summary">{featuredStory.data.summary}</p>
              <a href={`/user-stories/${featuredStory.data.slug}`} class="featured-cta">
                Read This Story
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        )}

        <div class="stats-row">
          <div class="stat-item">
            <div class="stat-number">$600</div>
            <div class="stat-label">average cost of a will</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">2,000+</div>
            <div class="stat-label">wills contested yearly</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">$500k</div>
            <div class="stat-label">median estate value</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">9 months</div>
            <div class="stat-label">average time to settle</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Intro -->
    <div class="section-intro">
      <h2>Real families. <strong>Real outcomes.</strong></h2>
      <p>Some got it wrong. Some got it right. All have something to teach.</p>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <div class="content-wrapper">

        <!-- Hard Way Stories -->
        <section class="story-group" id="cautionary">
          <h2 class="group-title">These families learned the hard way</h2>
          <p class="group-subtitle">You don't have to.</p>
          <div class="story-cards">
            {hardWayStories.map((article: any, index: number) => (
              <a
                href={`/user-stories/${article.data.slug}`}
                class="article-card"
                style={`--delay: ${index * 0.05}s`}
              >
                {article.data.heroImage && (
                  <div class="card-image">
                    <img src={article.data.heroImage} alt="" />
                  </div>
                )}
                <div class="card-content">
                  <div class="card-meta">
                    {article.data.readTime && <span class="read-time">{article.data.readTime}</span>}
                    {article.data.issue && <span class="issue-tag">{article.data.issue}</span>}
                  </div>
                  <h3>{article.data.title}</h3>
                  <p>{article.data.summary}</p>
                  <span class="read-more">Read more →</span>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Right Way Stories -->
        <section class="story-group" id="success">
          <h2 class="group-title">How it should be done</h2>
          <p class="group-subtitle">Real families who got it right.</p>
          <div class="story-cards">
            {rightWayStories.map((article: any, index: number) => (
              <a
                href={`/user-stories/${article.data.slug}`}
                class="article-card"
                style={`--delay: ${index * 0.05}s`}
              >
                {article.data.heroImage && (
                  <div class="card-image">
                    <img src={article.data.heroImage} alt="" />
                  </div>
                )}
                <div class="card-content">
                  <div class="card-meta">
                    {article.data.readTime && <span class="read-time">{article.data.readTime}</span>}
                    {article.data.issue && <span class="issue-tag">{article.data.issue}</span>}
                  </div>
                  <h3>{article.data.title}</h3>
                  <p>{article.data.summary}</p>
                  <span class="read-more">Read more →</span>
                </div>
              </a>
            ))}
          </div>
        </section>

      </div>
    </main>

    <Footer />

    <!-- Mobile Menu Script -->
    <script>
      const toggleButton = document.getElementById('mobile-menu-toggle');
      const closeButton = document.getElementById('mobile-menu-close');
      const overlay = document.getElementById('mobile-menu-overlay');
      const panel = document.getElementById('mobile-menu-panel');

      function openMenu() {
        overlay.classList.add('active');
        panel.classList.add('active');
        document.body.classList.add('menu-open');
      }

      function closeMenu() {
        overlay.classList.remove('active');
        panel.classList.remove('active');
        document.body.classList.remove('menu-open');
      }

      toggleButton?.addEventListener('click', openMenu);
      closeButton?.addEventListener('click', closeMenu);
      overlay?.addEventListener('click', closeMenu);
    </script>
  </body>
</html>

<style>
  :root {
    --font-display: 'Source Serif 4', Georgia, serif;
    --font-body: 'Inter', -apple-system, sans-serif;
    --navy: #1a2e44;
    --navy-light: #e9eef3;
    --gold: #c9a227;
    --gold-light: #faf6e9;
    --sage: #4a7c59;
    --sage-light: #f2f7f4;
    --cream: #fafaf8;
    --warm-bg: #f5f0e8;
    --text-dark: #2c2c2c;
    --text-medium: #5a5a5a;
    --text-light: #8a8a8a;
    --border-subtle: #e8e6e1;
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 1.5rem;
    --space-lg: 2.5rem;
    --space-xl: 4rem;
    --space-2xl: 6rem;
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 20px;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.04);
    --shadow-md: 0 4px 16px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 32px rgba(0,0,0,0.12);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--cream);
    color: var(--text-dark);
    line-height: 1.7;
    font-size: 17px;
  }

  /* === BREADCRUMB === */
  .breadcrumb {
    color: rgba(255, 255, 255, 0.8);
    font-size: 14px;
    padding-bottom: 24px;
    margin: 0;
    background: none;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: #ffffff;
  }

  .breadcrumb-separator,
  .breadcrumb > span {
    color: rgba(255, 255, 255, 0.5);
  }

  /* === HERO SECTION === */
  .hero-section {
    background: var(--navy);
    padding: 48px 64px 40px;
  }

  .hero-inner {
    max-width: 1100px;
    margin: 0 auto;
  }

  .hero-label {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--gold);
    margin-bottom: 24px;
  }

  .label-icon {
    font-size: 14px;
  }

  /* Featured Story Card */
  .featured-story {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
    margin-bottom: 32px;
  }

  .featured-image {
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 16/10;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-content {
    color: white;
  }

  .featured-meta {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
  }

  .featured-issue {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 6px 12px;
    background: rgba(232, 93, 76, 0.2);
    color: #ff8a7a;
    border-radius: 100px;
  }

  .featured-time {
    font-size: 13px;
    color: rgba(255,255,255,0.6);
    display: flex;
    align-items: center;
  }

  .featured-title {
    font-family: var(--font-display);
    font-size: 2.2rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    color: white;
  }

  .featured-summary {
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(255,255,255,0.75);
    margin-bottom: 24px;
  }

  .featured-cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--gold);
    color: white;
    padding: 14px 28px;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.2s;
  }

  .featured-cta:hover {
    background: #b8922a;
    transform: translateX(4px);
  }

  .featured-cta svg {
    width: 18px;
    height: 18px;
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 32px;
    padding: 20px 40px;
    background: rgba(255,255,255,0.05);
    border-radius: 12px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-family: var(--font-display);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--gold);
    line-height: 1.2;
  }

  .stat-label {
    font-size: 12px;
    color: rgba(255,255,255,0.6);
    margin-top: 4px;
    max-width: 120px;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255,255,255,0.15);
  }

  /* Section Intro */
  .section-intro {
    text-align: center;
    padding: 60px 64px 40px;
    background: white;
  }

  .section-intro h2 {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 400;
    color: var(--navy);
    margin-bottom: 12px;
  }

  .section-intro h2 strong {
    font-weight: 700;
  }

  .section-intro p {
    color: var(--text-medium);
    font-size: 1.1rem;
  }

  /* === MAIN CONTENT === */
  .main-content {
    padding: 0;
  }

  .content-wrapper {
    max-width: 100%;
    margin: 0;
  }

  /* === STORY GROUPS === */
  .story-group {
    padding: 48px 64px 60px;
    margin-bottom: 0;
  }

  .story-group:nth-child(odd) {
    background: var(--navy-light);
  }

  .story-group:nth-child(even) {
    background: white;
  }

  .group-title {
    font-family: var(--font-display);
    font-size: 1.6rem;
    font-weight: 600;
    color: var(--navy);
    margin-bottom: 8px;
  }

  .group-subtitle {
    color: var(--text-medium);
    margin-bottom: 32px;
  }

  .story-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
    max-width: 1200px;
    margin: 0 auto;
  }

  .article-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--border-subtle);
    transition: all 0.3s ease;
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: var(--delay, 0s);
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.1);
    border-color: var(--navy);
  }

  .card-image {
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--space-md);
  }

  .card-meta {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .read-time {
    font-size: 12px;
    color: var(--text-light);
  }

  .issue-tag {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 4px 8px;
    background: var(--accent-coral-light);
    color: var(--accent-coral);
    border-radius: 4px;
  }

  .article-card h3 {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--text-dark);
    line-height: 1.3;
  }

  .article-card p {
    font-size: 15px;
    color: var(--text-medium);
    margin-bottom: var(--space-sm);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    font-size: 14px;
    font-weight: 600;
    color: var(--gold);
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: gap 0.2s;
  }

  .article-card:hover .read-more {
    gap: 8px;
  }


  /* === RESPONSIVE === */
  @media (max-width: 900px) {
    .featured-story {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .hero-section {
      padding: 48px 24px 40px;
    }

    .featured-title {
      font-size: 1.8rem;
    }

    .stats-row {
      flex-wrap: wrap;
      gap: 24px;
    }

    .stat-divider {
      display: none;
    }

    .stat-item {
      flex: 1 1 40%;
    }
  }

  @media (max-width: 768px) {
    .story-cards {
      grid-template-columns: 1fr;
    }

    .story-group {
      padding: 40px 24px;
    }

    .section-intro {
      padding: 40px 24px 32px;
    }

    .stats-row {
      gap: 20px;
      padding: 16px 24px;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 11px;
    }
  }

  @media (max-width: 480px) {
  }
</style>
