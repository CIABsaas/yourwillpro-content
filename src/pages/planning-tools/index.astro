<style>
  /* Hover effects for interactive cards */
  a[href="/planning-tools/checklists/"]:hover,
  a[href="/planning-tools/top-10/"]:hover,
  a[href="/planning-tools/power-of-attorney/"]:hover {
    border-color: #c9a227 !important;
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  /* CTA button hover */
  a[href="https://yourwillpro.com.au"]:hover {
    background: #b08920 !important;
  }

  /* Responsive adjustments */
  @media (max-width: 900px) {
    main section:first-child {
      padding: 60px 32px !important;
    }
    main section:first-child h1 {
      font-size: 36px !important;
    }
    main section:nth-child(2) {
      padding: 60px 32px !important;
    }
    main section:last-child {
      padding: 48px 32px !important;
    }
  }

  @media (max-width: 600px) {
    main section:first-child {
      padding: 40px 20px !important;
    }
    main section:first-child h1 {
      font-size: 28px !important;
    }
    main section:first-child p {
      font-size: 16px !important;
    }
    main section:nth-child(2) {
      padding: 40px 20px !important;
    }
    main section:nth-child(2) > div {
      grid-template-columns: 1fr !important;
    }
    main section:last-child {
      padding: 40px 20px !important;
    }
    main section:last-child h2 {
      font-size: 24px !important;
    }
  }
</style>

</body>
