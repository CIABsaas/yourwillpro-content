  /* Related Section */
  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 1.5rem;
  }

  .related-group h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--navy);
    margin: 0 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--gold);
  }

  .related-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .related-group li {
    margin-bottom: 0.5rem;
  }

  .related-group a {
    color: var(--navy);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
  }

  .related-group a:hover {
    color: var(--gold);
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 1.5rem;
    }

    .hero h1 {
      font-size: 1.875rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .content-section h2 {
      font-size: 1.5rem;
    }

    .state-panel {
      padding: 1.5rem;
    }

    .verification-notice {
      flex-direction: row;
      padding: 0.875rem 1rem;
      font-size: 0.875rem;
    }

    .verification-notice svg {
      width: 20px;
      height: 20px;
    }

    .cta-section {
      padding: 2rem 1.5rem;
    }

    .form-group {
      flex-direction: column;
    }

    .notify-form input[type="email"] {
      min-width: 100%;
    }

    .btn-notify {
      width: 100%;
    }

    .comparison-table {
      font-size: 0.875rem;
    }

    .comparison-table th,
    .comparison-table td {
      padding: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .poa-page {
      padding: 0 1rem;
    }

    .hero {
      padding: 1.5rem 1.25rem;
      border-radius: var(--radius-md);
    }

    .hero h1 {
      font-size: 1.625rem;
    }

    .scenario-cards {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // State Selector Functionality
  document.addEventListener('DOMContentLoaded', () => {
    const stateSelect = document.getElementById('state-select');
    const stateInfos = document.querySelectorAll('.state-info');
    
    // Check localStorage for saved state
    const savedState = localStorage.getItem('ywp-selected-state');
    if (savedState && stateSelect) {
      stateSelect.value = savedState;
      updateStatePanel(savedState);
    }
    
    stateSelect?.addEventListener('change', (e) => {
      const selectedState = e.target.value;
      localStorage.setItem('ywp-selected-state', selectedState);
      updateStatePanel(selectedState);
    });
    
    function updateStatePanel(state) {
      stateInfos.forEach(info => {
        info.style.display = 'none';
      });
      
      const targetId = state === 'all' ? 'state-all' : `state-${state}`;
      const targetPanel = document.getElementById(targetId);
      if (targetPanel) {
        targetPanel.style.display = 'block';
      }
    }
    
    // POA Type Cards - Expand/Collapse
    const typeHeaders = document.querySelectorAll('.poa-type-header');
    
    typeHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const isExpanded = header.getAttribute('aria-expanded') === 'true';
        const content = header.nextElementSibling;
        
        // Toggle this card
        header.setAttribute('aria-expanded', !isExpanded);
        content.classList.toggle('expanded', !isExpanded);
      });
    });
  });
</script>

