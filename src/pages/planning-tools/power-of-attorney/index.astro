  }

  .btn-notify:active {
    transform: scale(0.98);
  }

  .form-note {
    font-size: 0.8125rem;
    opacity: 0.8;
    margin: 0.75rem 0 0;
  }

  .success-message {
    background: rgba(255, 255, 255, 0.15);
    padding: 1rem 1.25rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
