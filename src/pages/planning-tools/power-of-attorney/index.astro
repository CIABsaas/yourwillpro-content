  }

  .faq-item[open] summary::after {
    content: "−";
  }

  .faq-item p {
    padding: 0 1.5rem 1.25rem;
    margin: 0;
    color: var(--gray-600);
    line-height: 1.7;
    border-top: 1px solid var(--gray-100);
    padding-top: 1rem;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--navy) 0%, var(--navy-dark) 100%);
    border-radius: var(--radius-lg);
    padding: 3rem 2rem;
