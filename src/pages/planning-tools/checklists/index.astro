    <!-- MAIN CONTENT -->
    <section style="flex: 1;">

    <!-- Checklist 1: Probate -->
    <a href="/planning-tools/checklists/probate" style="display: block; background: white; border: 2px solid #e5e2dd; border-radius: 12px; padding: 32px; margin-bottom: 24px; text-decoration: none; transition: all 0.2s ease;">
      <div style="display: flex; align-items: flex-start; gap: 24px;">
        <div style="flex-shrink: 0; width: 60px; height: 60px; background: linear-gradient(135deg, #1a2e44 0%, #2a4560 100%); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 28px;">
