</main>

<Footer />

<style>
    /* Sidebar link hover */
  .sidebar-link:hover {
    background: #faf6e9 !important;
  }

  /* Hover effects for checklist cards */
  a[href^="/planning-tools/checklists/"]:hover {
    border-color: #c9a227 !important;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
  }

  /* Prevent hover on sidebar links from affecting card styles */
  .sidebar-link:hover {
    border-color: transparent !important;
    transform: none !important;
    box-shadow: none !important;
  }

  /* CTA button hover */
  a[href="https://yourwillpro.com.au"]:hover {
    background: #b08920 !important;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .checklist-sidebar {
      display: none !important;
    }
  }

  @media (max-width: 900px) {
    main section:first-child {
      padding: 60px 32px !important;
    }
    main section:first-child h1 {
      font-size: 36px !important;
    }
    main section:last-child {
      padding: 48px 32px !important;
    }
  }

  @media (max-width: 600px) {
    main section:first-child {
      padding: 40px 20px !important;
    }
    main section:first-child h1 {
      font-size: 28px !important;
    }
    main section:first-child p {
      font-size: 16px !important;
    }
    main section:last-child {
      padding: 40px 20px !important;
    }
    main section:last-child h2 {
      font-size: 24px !important;
    }
  }
</style>

</body>
</html>
