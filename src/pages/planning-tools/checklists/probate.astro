---
/**
 * Probate Checklist Page
 * Interactive checklist for probate process
 */
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Probate Checklist | YourWillPro</title>
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --font-display: 'Source Serif 4', Georgia, serif;
      --font-body: 'Inter', -apple-system, sans-serif;
      --navy: #1a2e44;
      --navy-light: #e9eef3;
      --gold: #c9a227;
      --gold-light: #faf6e9;
      --sage: #4a7c59;
      --sage-light: #eef4f0;
      --coral: #e85d4c;
      --coral-light: #fef0ee;
      --bg: #ffffff;
      --bg-light: #f7f8f9;
      --text-primary: #1a1a1a;
      --text-secondary: #4a4a4a;
      --text-muted: #7a7a7a;
      --border: #e2e2e2;
      --radius-sm: 8px;
      --radius-md: 12px;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: var(--font-body);
      background: var(--bg);
      color: var(--text-primary);
      line-height: 1.7;
      font-size: 17px;
    }

    /* Header styles removed - using Header component */

    /* === HERO === */
    .hero {
      background: var(--navy);
      padding: 60px 64px;
      text-align: center;
    }

    .hero-inner {
      max-width: 800px;
      margin: 0 auto;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: rgba(201, 162, 39, 0.15);
      color: var(--gold);
      padding: 8px 16px;
      border-radius: 100px;
      font-size: 12px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 20px;
    }

    .hero h1 {
      font-family: var(--font-display);
      font-size: 52px;
      color: white;
      margin-bottom: 16px;
      line-height: 1.1;
    }

    .hero p {
      font-size: 19px;
      color: rgba(255,255,255,0.9);
      max-width: 700px;
      margin: 0 auto;
    }

    /* === PROGRESS BAR === */
    .progress-section {
      background: white;
      border-bottom: 1px solid var(--border);
      padding: 24px 64px;
    }

    .progress-inner {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      gap: 24px;
    }

    .progress-label {
      font-size: 14px;
      font-weight: 600;
      color: var(--text-secondary);
      white-space: nowrap;
    }

    .progress-bar {
      flex: 1;
      height: 8px;
      background: var(--navy-light);
      border-radius: 100px;
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: var(--sage);
      width: 0%;
      transition: width 0.3s;
    }

    .progress-count {
      font-size: 14px;
      color: var(--text-muted);
      white-space: nowrap;
    }

    /* === MAIN LAYOUT === */
    .main-layout {
      max-width: 1200px;
      margin: 0 auto;
      padding: 48px 64px;
      display: grid;
      grid-template-columns: 240px 1fr;
      gap: 64px;
      position: relative;
    }

    /* === SIDEBAR === */
    .sidebar {
      position: sticky;
      top: 100px;
      height: fit-content;
    }

    .sidebar-title {
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-muted);
      margin-bottom: 16px;
    }

    .section-list {
      list-style: none;
    }

    .section-item {
      margin-bottom: 4px;
    }

    .section-link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 12px;
      font-size: 14px;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: 6px;
      transition: all 0.2s;
    }

    .section-link:hover {
      background: var(--bg-light);
      color: var(--text-primary);
    }

    .section-count {
      font-size: 12px;
      color: var(--text-muted);
      background: var(--navy-light);
      padding: 2px 8px;
      border-radius: 100px;
    }

    /* === CONTENT === */
    .content {
      min-width: 0;
    }

    /* === CHECKLIST SECTION === */
    .checklist-section {
      margin-bottom: 56px;
    }

    .section-header {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      margin-bottom: 24px;
      padding-bottom: 16px;
      border-bottom: 2px solid var(--navy);
    }

    .section-header h2 {
      font-family: var(--font-display);
      font-size: 28px;
      color: var(--navy);
    }

    .section-progress {
      font-size: 13px;
      color: var(--text-muted);
      font-style: italic;
    }

    .checklist-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .checklist-item {
      display: flex;
      align-items: flex-start;
      gap: 16px;
      padding: 16px;
      background: white;
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: all 0.2s;
      user-select: none;
    }

    .checklist-item:hover {
      border-color: var(--sage);
      background: var(--sage-light);
    }

    .checklist-item.checked {
      background: var(--sage-light);
      border-color: var(--sage);
    }

    .checklist-item.checked .item-text {
      color: var(--text-muted);
      text-decoration: line-through;
    }

    .checkbox {
      flex-shrink: 0;
      width: 24px;
      height: 24px;
      border: 2px solid var(--border);
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .checklist-item:hover .checkbox {
      border-color: var(--sage);
    }

    .checklist-item.checked .checkbox {
      background: var(--sage);
      border-color: var(--sage);
    }

    .checkbox svg {
      width: 16px;
      height: 16px;
      stroke-width: 3;
      color: white;
      opacity: 0;
      transition: opacity 0.2s;
    }

    .checklist-item.checked .checkbox svg {
      opacity: 1;
    }

    .item-text {
      flex: 1;
      font-size: 16px;
      color: var(--text-primary);
      line-height: 1.5;
    }

    /* === EMAIL CTA === */
    .email-cta {
      background: linear-gradient(135deg, var(--navy) 0%, #2a4a73 100%);
      padding: 32px;
      border-radius: var(--radius-md);
      display: grid;
      grid-template-columns: auto 1fr auto;
      gap: 24px;
      align-items: center;
      margin: 48px 0;
    }

    .email-cta-icon {
      width: 48px;
      height: 48px;
      background: rgba(201, 162, 39, 0.2);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .email-cta-icon svg {
      width: 24px;
      height: 24px;
      color: var(--gold);
    }

    .email-cta-text {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .email-cta-text strong {
      color: white;
      font-size: 17px;
    }

    .email-cta-text span {
      color: rgba(255,255,255,0.7);
      font-size: 14px;
    }

    .email-form {
      display: flex;
      gap: 8px;
    }

    .email-input {
      padding: 12px 16px;
      border: 1px solid rgba(255,255,255,0.2);
      border-radius: 8px;
      background: rgba(255,255,255,0.1);
      color: white;
      font-size: 15px;
      min-width: 240px;
      outline: none;
      transition: all 0.2s;
    }

    .email-input::placeholder {
      color: rgba(255,255,255,0.5);
    }

    .email-input:focus {
      background: rgba(255,255,255,0.15);
      border-color: rgba(255,255,255,0.3);
    }

    .email-submit {
      padding: 12px 24px;
      background: var(--gold);
      color: var(--navy);
      border: none;
      border-radius: 8px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      white-space: nowrap;
      transition: all 0.2s;
    }

    .email-submit:hover {
      background: #b8922a;
    }

    /* === CTA SECTION === */
    .cta-section {
      background: var(--gold-light);
      padding: 64px;
      text-align: center;
      border-radius: var(--radius-md);
      margin: 64px 0;
    }

    .cta-content {
      max-width: 600px;
      margin: 0 auto;
    }

    .cta-content h2 {
      font-family: var(--font-display);
      font-size: 36px;
      color: var(--navy);
      margin-bottom: 16px;
    }

    .cta-content p {
      font-size: 18px;
      color: var(--text-secondary);
      margin-bottom: 32px;
    }

    .cta-buttons {
      display: flex;
      gap: 16px;
      justify-content: center;
    }

    .cta-btn-primary {
      padding: 16px 32px;
      background: var(--navy);
      color: white;
      text-decoration: none;
      border-radius: var(--radius-sm);
      font-weight: 600;
      font-size: 16px;
      transition: all 0.2s;
    }

    .cta-btn-primary:hover { background: #2a4a73; }

    /* Footer styles removed - using Footer component */

    /* === PRINT BLOCKING === */
    @media print {
      body * {
        display: none !important;
      }

      body::before {
        content: "This checklist is not available for printing. Visit YourWillPro.com.au to download the PDF version.";
        display: block !important;
        font-family: Inter, -apple-system, sans-serif;
        font-size: 18px;
        color: #1a2e44;
        text-align: center;
        padding: 100px 40px;
        line-height: 1.6;
      }
    }

    /* === RESPONSIVE === */
    @media (max-width: 900px) {
      .main-layout {
        grid-template-columns: 1fr;
        gap: 32px;
        padding: 32px 24px;
      }

      .sidebar {
        position: static;
        display: none;
      }

      .progress-section, .cta-section {
        padding-left: 24px;
        padding-right: 24px;
      }

      .hero {
        padding: 40px 24px;
      }

      .hero h1 {
        font-size: 36px;
      }

      .hero p {
        font-size: 17px;
      }

      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
      }

      .email-cta {
        grid-template-columns: 1fr;
        gap: 20px;
        padding: 24px;
      }

      .email-form {
        flex-direction: column;
      }

      .email-input {
        width: 100%;
        min-width: 0;
      }

      .cta-buttons {
        flex-direction: column;
      }

      .cta-content h2 {
        font-size: 28px;
      }
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <Header />

  <!-- Breadcrumb Navigation -->
  <nav class="breadcrumb" style="padding: 1rem 2rem; font-size: 0.85rem; color: #7a7a7a; background: white; border-bottom: 1px solid #e2e2e2;">
    <a href="/" style="color: #7a7a7a; text-decoration: none;">Home</a>
    <span style="margin: 0 0.5rem;">â€º</span>
