  </section>

  <!-- MAIN LAYOUT -->
  <div class="main-layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
      <nav class="sidebar-nav">
        <h3 class="sidebar-title">Sections</h3>
        <ul class="section-list">
          <li class="section-item"><a href="#immediate" class="section-link">Immediate Steps <span class="section-count">7</span></a></li>
          <li class="section-item"><a href="#documents" class="section-link">Documents to Locate <span class="section-count">7</span></a></li>
          <li class="section-item"><a href="#financial" class="section-link">Financial Documents <span class="section-count">12</span></a></li>
          <li class="section-item"><a href="#notify-death" class="section-link">Death Notifications <span class="section-count">8</span></a></li>
          <li class="section-item"><a href="#notify-services" class="section-link">Service Cancellations <span class="section-count">7</span></a></li>
          <li class="section-item"><a href="#notify-legal" class="section-link">Legal & Financial <span class="section-count">5</span></a></li>
          <li class="section-item"><a href="#information" class="section-link">Information to Compile <span class="section-count">9</span></a></li>
          <li class="section-item"><a href="#assets" class="section-link">Asset Inventory <span class="section-count">9</span></a></li>
          <li class="section-item"><a href="#liabilities" class="section-link">Liabilities <span class="section-count">7</span></a></li>
          <li class="section-item"><a href="#beneficiaries" class="section-link">Beneficiaries Info <span class="section-count">4</span></a></li>
          <li class="section-item"><a href="#questions" class="section-link">Questions to Answer <span class="section-count">6</span></a></li>
          <li class="section-item"><a href="#digital" class="section-link">Digital Matters <span class="section-count">6</span></a></li>
          <li class="section-item"><a href="#where-to-look" class="section-link">Where to Look <span class="section-count">7</span></a></li>
          <li class="section-item"><a href="#professional" class="section-link">Professional Help <span class="section-count">4</span></a></li>
        </ul>
      </nav>
    </aside>

    <!-- CONTENT -->
    <div class="content">

      <!-- IMMEDIATE STEPS -->
      <section class="checklist-section" id="immediate">
        <div class="section-header">
          <h2>Immediate Steps</h2>
          <span class="section-progress">First few days</span>
        </div>
        <div class="checklist-group">
          <div class="checklist-item" data-id="1">
            <div class="checkbox"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M20 6L9 17l-5-5"/></svg></div>
            <span class="item-text">Locate the original will (not a copy)</span>
          </div>
          <div class="checklist-item" data-id="2">
            <div class="checkbox"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M20 6L9 17l-5-5"/></svg></div>
            <span class="item-text">Check if there are any later wills or codicils</span>
          </div>
          <div class="checklist-item" data-id="3">
